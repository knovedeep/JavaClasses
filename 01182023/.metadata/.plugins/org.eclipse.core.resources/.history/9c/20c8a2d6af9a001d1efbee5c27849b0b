
public class ArraysDataStructures {

	public static void main(String[] args) {
		double [] arrayItems= {1,354,64,3,2};
		double maximum = arrayItems[0];
		int index=0;
		for (int i=1; i<arrayItems.length; i++) {
			if (arrayItems[i]>maximum) {
				maximum=arrayItems[i];
				index=i;
			}
		}
		
System.out.println(index);
	}

}
